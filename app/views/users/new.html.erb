<div class="container">
  <h1>NEW USER</h1>

  <%= form_for :user, url: users_path do |f| %>
    <p>
      <%= f.label :first_name %><br>
      <%= f.text_field :string %>
    </p>

    <p>
      <%= f.label :last_name %><br>
      <%= f.text_field :string %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :string %>
    </p>

    <p>
      <%= f.label :password_digest %><br>
      <%= f.text_field :string %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

</div>
